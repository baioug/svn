<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_wifi_item"
    android:orientation="vertical" >
    
     <TextView 
            android:id="@+id/tv_wifi_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSID"
            android:textColor="#ff45D1F9"
            android:textSize="21sp"
       />
             <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/tv_wifi_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EE-EE-EE-EE-EE-EE"
            android:textColor="#00C500"
            android:textSize="18sp"
       />
        
                     <TextView 
            android:id="@+id/tv_wifi_rssi"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rssi: -35"
            android:textColor="#00C500"
            android:textSize="18sp"
            />
                     
       </LinearLayout>
       
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
                     
                <TextView 
            android:id="@+id/tv_wifi_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接速度:2MBps"
            android:textColor="#00C500"
            android:layout_weight="1"
            android:textSize="16sp"
            
            />

        <TextView 
            android:id="@+id/tv_wifi_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password"
            android:layout_weight="3"
            android:textColor="#00C500"
            android:textSize="16sp"
            
            />

        </LinearLayout>
    
</LinearLayout>
